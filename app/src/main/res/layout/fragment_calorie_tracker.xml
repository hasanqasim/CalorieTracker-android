<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="48dp">
    <TextView
        android:id="@+id/tv_calorieGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
    <Button
        android:id="@+id/btn_calorie_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_calorieGoal"
        android:text="Calorie Goal"/>
    <TextView
        android:id="@+id/tv_stepsTaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_calorie_goal"/>
    <Button
        android:id="@+id/btn_steps_taken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_stepsTaken"
        android:text="Steps Taken" />
    <TextView
        android:id="@+id/tv_caloriesConsumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_steps_taken"/>
    <Button
        android:id="@+id/btn_calories_consumed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_caloriesConsumed"
        android:text="Calories Consumed"/>
    <TextView
        android:id="@+id/tv_caloriesBurned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_calories_consumed"/>
    <Button
        android:id="@+id/btn_calories_burned"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_caloriesBurned"
        android:text="Calories Burned"/>
    <Button
        android:id="@+id/btn_delete_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_calories_burned"
        android:layout_marginTop="30dp"
        android:text="POST/DELETE"/>
</RelativeLayout>