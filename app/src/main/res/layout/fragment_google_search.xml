<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/simpleImageView"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginTop="?attr/actionBarSize" />
    <TextView
        android:id="@+id/tv_wiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/simpleImageView"
        android:textSize="15sp"/>
    <EditText
        android:id="@+id/et_ask_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ask Google"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:layout_below="@+id/tv_wiki"/>
    <Button
        android:id="@+id/btn_search_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:layout_below="@+id/et_ask_google"/>
    <TextView
        android:id="@+id/tv_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/btn_search_google"
        android:textSize="15sp"/>
    <Button
        android:id="@+id/btn_add_food_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:layout_below="@+id/tv_api"/>
</RelativeLayout>